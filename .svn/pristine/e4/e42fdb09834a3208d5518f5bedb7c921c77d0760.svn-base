.music {
  height: 100%;
  background-color: #f5f5f5;
  display: flex;
  position: relative;
}

.music-container {
  margin-top: 30rpx;
}

.music-control {
  margin-top: 20rpx;
  margin: 0 35rpx;
  padding: 15rpx 20rpx 8rpx 15rpx;
  position: relative;
  background-color: #fff;
  border: 1px solid #ebebeb;
  border-radius: 3px;
  box-shadow: 0px 1px 1px #ebebeb;
}

/*知识库  */

.knowledge_base_top {
  margin-top: 15rpx;
  width: 100%;
  display: flex;
}

/*标题字样 */

.knowledge_base_title {
  width: 100%;
  color: black;
  font-size: 15px;
  font-weight: bolder;
}

/*更多>>  */

.knowledge_base_more {
  text-align: right;
  font-size: 11px;
}

/*细线 */

.line {
  margin-top: 10px;
  margin-bottom: 20rpx;
  height: 6rpx;
  width: 100%;
  background-color: #f5f5f5;
}

/*知识库内容title */

.knowledge_base_content_title {
  width: 100%;
  color: gray;
  font-size: 16px;
  font-weight: bolder;
}

/*知识库内容 */

.knowledge_base_content {
  color: gray;
  font-size: 12px;
}

/* pages/waveimage/waveimage.wxss */

.v-body {
  display: flex;
  position: relative;
}

.myCanvas {
  background-color: transparent;
  width: 90px;
  height: 400px;
}

.v-canvas {
  position: fixed;
  right: 20px;
  bottom: 60px;
  width: 90px;
  background-color: transparent;
}

.v-img {
  position: fixed;
  right: 45px;
  bottom: 30px;
}

.bt-img {
  width: 40px;
  height: 40px;
  transform: scale(1);
  -webkit-transform: scale(1);
  -webkit-transition: ease all;
  -moz-transition: ease all;
  transition: ease all;
  -webkit-transition-duration: 700ms;
  -moz-transition-duration: 700ms;
  transition-duration: 700ms;
}
