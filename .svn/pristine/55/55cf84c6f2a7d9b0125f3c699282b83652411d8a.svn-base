//获取应用实例
var app = getApp()

Page({
  data: {
    remind: '加载中',
    help_status: false,
    userid_focus: false,
    passwd_focus: false,
    userid: '',
    passwd: '',
    angle: 0
  },
  onReady: function () {
    var _this = this;
    setTimeout(function () {
      _this.setData({
        remind: ''
      });
    }, 1000);
    wx.onAccelerometerChange(function (res) {
      var angle = -(res.x * 30).toFixed(1);
      if (angle > 14) { angle = 14; }
      else if (angle < -14) { angle = -14; }
      if (_this.data.angle !== angle) {
        _this.setData({
          angle: angle
        });
      }
    });
  },
  onLoad: function () {
    var that = this
    //调用应用实例的方法获取全局数据
    app.getUserInfo(function (userInfo, openId) {
      //更新数据
      that.setData({
        userInfo: userInfo,
        openId: openId
      })
      that.isRegisterNet()
    })

  },
  // 是否认证
  isRegisterNet: function () {
    var that = this
    wx.request({
      url: 'http://200.200.202.140:8080/party/supervision/superivsionIn.do',
      method: 'GET',
      header: {
        method: 'LOGIN_IN',
      },
      data: {
        openId: app.globalData.openId
      },
      success: function (res) {
        if (200 == res.statusCode && "200" == res.data.success) {
          //成功后跳转home
          setTimeout(function () {
            wx.switchTab({
              url: '../home/home'
            });
          }, 2000)
        }
        if (200 == res.statusCode && "202" == res.data.success) {
          console.log('res.data.success', res.data.success)
          //走认证界面
          setTimeout(function () {
            wx.navigateTo({
              url: '../register/register'
            });
          }, 2000)
        }
      },
    })
  },
})




