// my.js
var api = require('../../api/api.js')
//获取应用实例
var app = getApp()
var inputinfo = "";
Page({

  /**
   * 页面的初始数据
   */
  data: {
    animationData: "",
    showModalStatus: false
  },
  onLoad: function () {
    console.log('onLoad')
    var that = this
    //更新数据
    that.setData({
      userInfo: app.globalData.userInfo,
      myBanner: api.myBanner,
      myXiaoxi: api.myXiaoxi,
      myXinde: api.myXinde,
      myZan: api.myZan,
      myArrowChart: api.myArrowChart
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  },

  // 认证
  UnbindNet: function () {
    var that = this
    wx.request({
      url: app.globalData.url,
      method: 'GET',
      header: {
        method: 'UNBUNDLING',
      },
      data: {
        openId: app.globalData.openId,
        idCard: inputinfo
      },
      success: function (res) {
        console.log(res)
        console.log("点击了确定===，输入的信息为为==", inputinfo);
        if (200 == res.statusCode && "300" == res.data.success) {
          wx.showToast({
            title: res.data.result,
            icon: 'success',
            duration: 2000
          })
        } else {
          wx.showToast({
            title: res.data.result,
            image: '../../image/error.png',
            duration: 2000
          })
        }
      },
    })
  },
  // 输入身份证弹框
  showModal: function () {
    // 显示遮罩层
    var animation = wx.createAnimation({
      duration: 200,
      timingFunction: "linear",
      delay: 0
    })
    this.animation = animation
    animation.translateY(300).step()
    this.setData({
      animationData: animation.export(),
      showModalStatus: true
    })
    setTimeout(function () {
      animation.translateY(0).step()
      this.setData({
        animationData: animation.export()
      })
    }.bind(this), 200)
  },
  hideModal: function () {
    var that = this
    // 隐藏遮罩层
    var animation = wx.createAnimation({
      duration: 200,
      timingFunction: "linear",
      delay: 0
    })
    that.animation = animation
    animation.translateY(300).step()
    that.setData({
      animationData: animation.export(),
    })
    setTimeout(function () {
      animation.translateY(0).step()
      that.setData({
        animationData: animation.export(),
        showModalStatus: false
      })
    }.bind(that), 200)
  },
  // 取消
  click_cancel: function () {
    var that = this
    console.log("点击取消");
    that.hideModal();
  },
  // 确定
  click_ok: function () {
    var that = this
    that.UnbindNet()
    that.hideModal();
  },
  input_content: function (e) {
    console.log(e);
    inputinfo = e.detail.value;
  },
  // 基本信息
  btnBaseInfo: function () {
    wx.navigateTo({
      url: 'baseInfo/baseInfo'
    });
  },
  // 微信解绑
  btnUnbind: function () {
    var that = this
    if (that.data.showModalStatus) {
      that.hideModal();
    } else {
      that.showModal();
    }
  },
  // 版本信息
  btnVersionInfo: function () {
    wx.navigateTo({
      url: 'versionInfo/versionInfo'
    });
  }
})