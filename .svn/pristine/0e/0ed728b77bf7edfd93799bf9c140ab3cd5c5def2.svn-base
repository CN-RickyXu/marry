//学习档案 pages/archives/archives.js
var api = require('../../api/api.js')
var app = getApp()
var notice_list
var id, name, content
var currentpage = 1
var maxPage
var list = []
Page({

  /**
   * 页面的初始数据
   */
  data: {
    key: ''
  },
  // 下载通知公告数据
  NoticeListNet: function () {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'GET_FEELINGS_LIST',
      },
      data: {
        branchCode: app.globalData.user.branchCode,
        currentPage: currentpage
      },
      success: function (res) {
        wx.hideLoading()
        console.log("res", res)
        if (200 == res.statusCode) {
          list = list.concat(res.data.resultList)
          maxPage = res.data.MaxSize
          var flag = res.data.flag
          console.log("list", list)
          console.log("maxPage", maxPage)
          if (res.data.length >= 1) {
            //更新数据
            that.setData({
              notice_list: list
            })
            console.log("if", 'if')
          } else {
            that.setData({
              notice_list: []
            })
            if (flag) {
              wx.showToast({
                title: res.data.message,
                image: '../../../image/success.png',
                duration: 2000
              })
            } else {
              wx.showToast({
                title: res.data.message,
                image: '../../../image/error.png',
                duration: 2000
              })
            }
          }
        }
      },
    })
  },
  // 点击公告信息变为已读
  ClickNoticeItemNet: function () {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'SAVE_FEELINGS_VIEW',
      },
      data: {
        // type（0.心得  1.知识库））
        userId: app.globalData.user.id,
        type: '0',
        feelingsId: id
      },
      success: function (res) {
        console.log("notice_res", res)
        if (200 == res.statusCode && '100' == res.data.success) {
          app.noticeDetailId = id
          console.log("archives_id", app.noticeDetailId + ':' + id)
          wx.navigateTo({
            url: 'archivesDetail/archivesDetail'
          });
        }
      },
    })
  },
  // 每条List点击事件
  btnNoticeItem: function (e) {
    var that = this
    id = e.currentTarget.id;
    that.ClickNoticeItemNet()
  },
  // 新增学习档案
  btnAdd: function (e) {
    var that = this
    wx.navigateTo({
      url: 'addArchives/addArchives'
    });
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {

  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    wx.showLoading({
      title: '正在加载..',
    })
    var that = this
    currentpage = 1
    // 清空list
    list.splice(0, list.length);
    that.NoticeListNet()
  },



  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {
    var that = this
    // 清空list
    list.splice(0, list.length);
    that.NoticeListNet()
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
    var that = this
    currentpage++
    if (currentpage < maxPage) {
      that.NoticeListNet()
    } else {

    }
  }


})
