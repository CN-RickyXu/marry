// register.js
import api from '../../api/api.js'
var app = getApp()
var idCard, name, phone, dept
Page({

  /**
   * 页面的初始数据
   */
  data: {
    dept: 0,
    picker1Range: ['请选择', '北京', '上海', '广州', '深圳']
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this
    app.getUserInfo(function (userInfo, openId) {
      //更新数据
      that.setData({
        userInfo: userInfo,
        openId: openId
      })
    }),
      //更新数据
      that.setData({
        userInfo: app.globalData.userInfo,
      })
    console.log("userInfo:", app.globalData.userInfo)
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  },
  // 姓名
  NameInput: function (e) {
     name = e.detail.value
  },
  // 电话
  PhoneInput: function (e) {
     phone = e.detail.value
  },
  // 身份证号
  IdCardInput: function (e) {
     idCard = e.detail.value
  },
  // 部门
  DeptPickerBindchange: function (e) {
     dept = e.detail.value
  },
  // 认证
  RegisterNet: function () {
    var that = this
    wx.request({
      url: 'https://party.mtm2000.cn/party/mobile/mobileIn.do',
      method: 'GET',
      header: {
        method: 'SAVE_USER',
      },
      data: {
        openId: app.globalData.openId,
        name: name,
        phone: phone,
        dept: dept,
        idCard: idCard
      },
      success: function (res) {
        if (200 == res.statusCode && "201" == res.data.success){
          //成功后跳转home
          wx.switchTab({
            url: '../home/home'
          });
        }else{
          console.log('name' + name,
            'phone' + phone,
            'idCard' + idCard)
          wx.showToast({
            title: res.data.result,
            image: '../../image/error.png',
            duration: 2000
          })
        }
      },
    })
  },
  // 开始认证
  btnRegister: function () {
    var that = this
    that.RegisterNet()
  }
})