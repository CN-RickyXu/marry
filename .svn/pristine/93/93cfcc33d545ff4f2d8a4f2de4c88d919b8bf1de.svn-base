// noticeDetail.js
var api = require('../../../api/api.js')
var app = getApp()
var fileType, fileUrl
var ctx = null;
var isClick = true
var factor = {
  speed: .008,  // 运动速度，值越小越慢
  t: 0    //  贝塞尔函数系数
};
var timer = null;  // 循环定时器



Page({

  /**
   * 页面的初始数据
   */
  data: {
    winWidth: 0,
    winHeight: 0,
    // tab切换  
    currentTab: 0,
    image_heart: '../../../image/img_heart.png',
    titleFile: '无附件',
    contentFile: '请上传相应附件',
  },
  // 下载知识库数据
  RepositoryNet: function () {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'GET_FEELING_DETAIL',
      },
      data: {
        feelingId: app.noticeDetailId
      },
      success: function (res) {
        console.log("feelings_res", res)
        if (200 == res.statusCode && null != res.data.feelings) {
          //更新数据
          that.setData({
            title: res.data.feelings.title,
            content: res.data.feelings.content
          })
        }
        if (200 == res.statusCode && null != res.data.accessory) {
          fileType = res.data.accessory.fileType,
            fileUrl = res.data.accessory.path,
            console.log("fileUrl", fileUrl)
          if (null != res.data.accessory.path && '' != res.data.accessory.path) {
            //更新数据
            that.setData({
              titleFile: res.data.accessory.path,
              contentFile: '附件创建时间:' + res.data.accessory.createTime,
            })
          }
        }
      },
    })
  },
  // 打开文档
  btnFile: function () {
    var that = this
    wx.showLoading({
      title: '正在打开文档...',
    })
    wx.downloadFile({
      url: api.image + fileUrl,
      success: function (res) {
        console.log('res', res)
        var filePath = res.tempFilePath
        console.log('filePath', filePath)
        wx.openDocument({
          filePath: filePath,
          success: function (res) {
            wx.hideLoading()
            wx.showToast({
              title: '打开文档成功',
              image: '../../../image/success.png',
              duration: 2000
            })
          },
          fail: function (res) {
            wx.hideLoading()
            wx.showToast({
              title: '打开文档失败',
              image: '../../../image/error.png',
              duration: 2000
            })
          }
        })
      }
    })
  },
  // 查看点赞状态net
  showPraiseNet: function () {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'SHOW_PRAISE_STATE',
      },
      data: {
        userId: app.globalData.user.id,
        feelingId: app.noticeDetailId,
        type: '1'
      },
      success: function (res) {
        console.log("showPraiseNet_res", res)
        if (200 == res.statusCode && res.data.result) {
          isClick = res.data.result
        } else if (false == res.data.result) {
          isClick = res.data.result
          console.log("isClick", isClick)
          that.redHeart()
        }
      },
    })
  },
  // 点赞net
  PraiseNet: function (isDelete) {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'SAVE_PRAISE',
      },
      data: {
        userId: app.globalData.user.id,
        feelingId: app.noticeDetailId,
        type: '1',
        isDelete: isDelete
      },
      success: function (res) {
        console.log("PraiseNet_res", res)
        console.log("isClick", isClick)
        if (200 == res.statusCode && 'success' == res.data.result) {
          if (isClick) {
            isClick = false
            that.redHeart()
            that.startTimer();
          } else {
            isClick = true
            that.normalHeart()
            factor.t = 0;
            cancelAnimationFrame(timer);
            that.startTimer();
            if (timer != null) {
              cancelAnimationFrame(timer);
            }
          }
        } else if ('error' == res.data.result) {
          wx.showToast({
            title: res.data.result,
            image: '../../../image/error.png',
            duration: 2000
          })
        }
      },
    })
  },
  /** 
   * 滑动切换tab 
   */
  bindChange: function (e) {
    var that = this;
    that.setData({ currentTab: e.detail.current });
  },
  /** 
   * 点赞 
   */
  btnHeart: function (e) {
    var that = this;
    ctx = wx.createCanvasContext('canvas_wi')
    console.log("btnHeart", isClick)
    if (isClick) {
      that.PraiseNet('0')
    } else {
      that.PraiseNet('1')
    }

  },
  /** 
   * 点评论
   */
  btnLeaveInfo: function (e) {
    var that = this;
    that.clickLeave()
    setTimeout(function () {
      wx.navigateTo({
        url: '../../repository/repositoryDetail/comment/comment'
      })
    }, 650)

  },
  /**
 * 心变红
 */
  redHeart: function () {
    var that = this
    that.setData({
      style_img: 'transform:scale(1.3);'
    })
    setTimeout(function () {
      that.setData({
        style_img: 'transform:scale(1);'
      })
    }, 500)
    setTimeout(function () {
      that.setData({
        image_heart: '../../../image/heart2.png'
      })
    }, 500)
  },

  /**
* 心变白
*/
  normalHeart: function () {
    var that = this
    that.setData({
      style_img: 'transform:scale(1.3);'
    })
    setTimeout(function () {
      that.setData({
        style_img: 'transform:scale(1);'
      })
    }, 500)
    setTimeout(function () {
      that.setData({
        image_heart: '../../../image/img_heart.png'
      })
    }, 500)
  },
  /**
*评论图标动画
*/
  clickLeave: function () {
    var that = this
    that.setData({
      style_img_leave: 'transform:scale(1.3);'
    })
    setTimeout(function () {
      that.setData({
        style_img_leave: 'transform:scale(1);'
      })

    }, 500)
  },

  /** 
   * 点击tab切换 
   */
  swichNav: function (e) {
    var that = this;
    if (this.data.currentTab === e.target.dataset.current) {
      return false;
    } else {
      that.setData({
        currentTab: e.target.dataset.current
      })
    }
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this
    that.RepositoryNet()
    /** 
     * 获取系统信息 
     */
    wx.getSystemInfo({
      success: function (res) {
        that.setData({
          winWidth: res.windowWidth,
          winHeight: res.windowHeight
        });
      }

    });
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    var that = this
    that.showPraiseNet()

    // 清空值
    fileUrl = null
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  },
  startTimer: function () {
    var that = this
    that.setData({
      style_img: 'transform:scale(1.3);'
    })
    setTimeout(function () {
      that.setData({
        style_img: 'transform:scale(1);'
      })
    }, 500)
    that.drawImage([[{ x: 30, y: 400 }, { x: 70, y: 300 }, { x: -50, y: 150 }, { x: 30, y: 0 }], [{ x: 30, y: 400 }, { x: 30, y: 300 }, { x: 80, y: 150 }, { x: 30, y: 0 }], [{ x: 30, y: 400 }, { x: 0, y: 90 }, { x: 80, y: 100 }, { x: 30, y: 0 }]])

  },

  drawImage: function (data) {
    var that = this
    var p10 = data[0][0];   /* 三阶贝塞尔曲线起点坐标值*/
    var p11 = data[0][1];   /* 三阶贝塞尔曲线第一个控制点坐标值*/
    var p12 = data[0][2];   /* 三阶贝塞尔曲线第二个控制点坐标值*/
    var p13 = data[0][3];   /* 三阶贝塞尔曲线终点坐标值*/
    var p20 = data[1][0];
    var p21 = data[1][1];
    var p22 = data[1][2];
    var p23 = data[1][3];
    var p30 = data[2][0];
    var p31 = data[2][1];
    var p32 = data[2][2];
    var p33 = data[2][3];
    var t = factor.t;
    /*计算多项式系数 （下同）*/
    var cx1 = 3 * (p11.x - p10.x);
    var bx1 = 3 * (p12.x - p11.x) - cx1;
    var ax1 = p13.x - p10.x - cx1 - bx1;
    var cy1 = 3 * (p11.y - p10.y);
    var by1 = 3 * (p12.y - p11.y) - cy1;
    var ay1 = p13.y - p10.y - cy1 - by1;
    var xt1 = ax1 * (t * t * t) + bx1 * (t * t) + cx1 * t + p10.x;
    var yt1 = ay1 * (t * t * t) + by1 * (t * t) + cy1 * t + p10.y;
    var cx2 = 3 * (p21.x - p20.x);
    var bx2 = 3 * (p22.x - p21.x) - cx2;
    var ax2 = p23.x - p20.x - cx2 - bx2;
    var cy2 = 3 * (p21.y - p20.y);
    var by2 = 3 * (p22.y - p21.y) - cy2;
    var ay2 = p23.y - p20.y - cy2 - by2;
    var xt2 = ax2 * (t * t * t) + bx2 * (t * t) + cx2 * t + p20.x;
    var yt2 = ay2 * (t * t * t) + by2 * (t * t) + cy2 * t + p20.y;
    var cx3 = 3 * (p31.x - p30.x);
    var bx3 = 3 * (p32.x - p31.x) - cx3;
    var ax3 = p33.x - p30.x - cx3 - bx3;
    var cy3 = 3 * (p31.y - p30.y);
    var by3 = 3 * (p32.y - p31.y) - cy3;
    var ay3 = p33.y - p30.y - cy3 - by3;
    /*计算xt yt的值 */
    var xt3 = ax3 * (t * t * t) + bx3 * (t * t) + cx3 * t + p30.x;
    var yt3 = ay3 * (t * t * t) + by3 * (t * t) + cy3 * t + p30.y;
    factor.t += factor.speed;
    ctx.drawImage("../../../image/heart1.png", xt1, yt1, 30, 30);
    ctx.drawImage("../../../image/heart2.png", xt2, yt2, 30, 30);
    ctx.drawImage("../../../image/heart3.png", xt3, yt3, 30, 30);
    ctx.draw();
    timer = requestAnimationFrame(function () {
      that.drawImage([[{ x: 30, y: 400 }, { x: 70, y: 300 }, { x: -50, y: 150 }, { x: 30, y: 0 }], [{ x: 30, y: 400 }, { x: 30, y: 300 }, { x: 80, y: 150 }, { x: 30, y: 0 }], [{ x: 30, y: 400 }, { x: 0, y: 90 }, { x: 80, y: 100 }, { x: 30, y: 0 }]])
    })
  }
})