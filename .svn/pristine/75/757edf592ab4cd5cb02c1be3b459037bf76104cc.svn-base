// addArchives.js
var titleInput, contentInput, isfree = '0'
var api = require('../../../api/api.js')
var app = getApp()
Page({

  /**
   * 页面的初始数据
   */
  data: {
    openImg: '../../../image/close_state.png'
  },
  // 开关切换
  btnOpen: function (e) {
    var that = this
    if (e.detail.value) {
      isfree = '0'
    } else {
      isfree = '1'
    }

  },
  // 保存
  btnSave: function () {
    var that = this
    if (null == titleInput || undefined == titleInput) {
      wx.showToast({
        title: '请输入标题',
        image: '../../../image/error.png',
        duration: 2000
      })
      return
    }
    if (null == contentInput || undefined == contentInput) {
      wx.showToast({
        title: '请输入内容',
        image: '../../../image/error.png',
        duration: 2000
      })
      return
    }
    that.saveFeelingNet()

  },
  // title输入
  TitleInput1: function (e) {
    titleInput = e.detail.value
  },
  // content输入
  ContentInput1: function (e) {
    contentInput = e.detail.value
  },

  // 保存心得net
  saveFeelingNet: function () {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'SAVE_REPOSITORY',
      },
      data: {
        userId: app.globalData.user.id,
        content: contentInput,
        title: titleInput,
        branchCode: app.globalData.user.branchCode,
        isfree: isfree
      },
      success: function (res) {
        if (res.data.flag) {
          titleInput = null
          contentInput = null
          wx.showToast({
            title: res.data.message,
            image: '../../../image/success.png',
            duration: 2000
          })
          wx.switchTab({
            url: '../../repository/repository',
          })
        } else {
          wx.showToast({
            title: res.data.message,
            image: '../../../image/error.png',
            duration: 2000
          })
        }
      },
    })
  },
  /** 
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {

  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})