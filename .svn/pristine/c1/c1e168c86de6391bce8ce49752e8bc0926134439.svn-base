// partyRecordQuery.js
var app = getApp()
var currentPage = 0
var maxPage
var list = []
Page({

  /**
   * 页面的初始数据
   */
  data: {
    key: ''
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this
    list.splice(0, list.length)
    that.getPayRecordList()
  },
  // 下载通知公告数据
  getPayRecordList: function () {
    var that = this
    wx.request({
      url: 'https://party.mtm2000.cn/party/mobile/mobileIn.do',
      method: 'GET',
      header: {
        method: 'GET_PAY_RECORD',
      },
      data: {
        userId: app.globalData.user.id,
        currentPage: currentPage
      },
      success: function (res) {
        console.log("payRecord_res", res)
        if (200 == res.statusCode) {
          currentPage = res.data.currentPage
          maxPage = res.data.maxPage
          if (res.data.resultList.length >= 1) {
            console.log("list")
            list = list.concat(res.data.resultList)
            //更新数据
            that.setData({
              list: list
            })
          } else {
            that.setData({
              list: []
            })
          }

        }
      },
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
    var that = this
    currentPage++
    if (currentPage < maxPage) {
      that.getPayRecordList()
    }

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})