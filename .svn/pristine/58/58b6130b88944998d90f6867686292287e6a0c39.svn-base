/* addArchives.wxss */

.view {
  height: 100%;
  width: 100%;
  background-color: #efefef;
}

/*Title输入框 */

.input_title {
  padding: 10rpx;
  background-color: white;
  width: 100%;
  height: 50rpx;
  font-size: 13px;
}

/*Content输入框 */

.input_content {
  margin-top: 30rpx;
  padding: 10rpx;
  width: 100%;
  background-color: white;
  height: 550rpx;
  font-size: 13px;
}

.top_view {
  height: 20rpx;
  width: 100%;
  background-color: #efefef;
}

.is_open_view {
  margin:0 auto 0 auto;
  margin-top: 30rpx;
  width: 100%;
  height: 80rpx;
  background-color: white;
  display: flex;
}

.open_img {
  margin-top: 15rpx;
  margin-left: 20rpx;
  width: 45rpx;
  height: 45rpx;
}

.open_text {
  margin-top: 15rpx;
  margin-left: 20rpx;
}
.close_state_img {
  position: fixed;
  right: 0;
  margin-top: 5rpx;
}

.save_btn {
  margin-top: 200rpx;
  height: 100rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #fe5300;
  font-size: 20px;
  color: white;
}