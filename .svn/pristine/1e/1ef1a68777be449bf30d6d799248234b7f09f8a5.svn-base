<view class="container">
  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="https://party.mtm2000.cn/party/wechat/image/index/loading.gif"></image>
  </view>
  <block wx:else>
  <text class="title">交党费</text>
    <view class="content">
      <view class="hd" style="transform:rotateZ({{angle}}deg);">
          <image class="logo" src="{{userInfo.avatarUrl}}"></image>
          <image class="wave" src="https://party.mtm2000.cn/party/wechat/image/more/wave.png" mode="aspectFill"></image>
          <image class="wave wave-bg" src="https://party.mtm2000.cn/party/wechat/image/more/wave.png" mode="aspectFill"></image>
      </view>
    </view>
  </block>
</view>