/* 点赞和评论 pages/waveimage/waveimage.wxss */

.v-body {
  display: flex;
  position: relative;
}

.myCanvas {
  background-color: transparent;
  width: 90px;
  height: 400px;
}

.v-canvas {
  position: fixed;
  right: 35px;
  bottom: 120px;
  width: 90px;
  background-color: transparent;
}

.v-img {
  position: fixed;
  right: 15px;
  bottom: 80px;
}
.v-img_leave {
  position: fixed;
  right: 20px;
  bottom: 40px;
}

.bt-img {
  width: 40px;
  height: 40px;
  transform: scale(1);
  -webkit-transform: scale(1);
  -webkit-transition: ease all;
  -moz-transition: ease all;
  transition: ease all;
  -webkit-transition-duration: 700ms;
  -moz-transition-duration: 700ms;
  transition-duration: 700ms;
}

.bt-img_leave {
  width: 25px;
  height: 25px;
  transform: scale(1);
  -webkit-transform: scale(1);
  -webkit-transition: ease all;
  -moz-transition: ease all;
  transition: ease all;
  -webkit-transition-duration: 700ms;
  -moz-transition-duration: 700ms;
  transition-duration: 700ms;
}
