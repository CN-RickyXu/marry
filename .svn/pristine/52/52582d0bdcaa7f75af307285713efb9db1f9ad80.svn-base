<!--index.wxml-->
<view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">基本信息</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">附件查看</view>
</view>
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
  <!-- 基本信息 -->
  <swiper-item>
    <scroll-view class="music" scroll-y="true">
      <view class="music-container">
        <!--学习档案  -->
        <view class="music-control">
          <view class="knowledge_base_top">
            <text class="knowledge_base_title">{{title}}</text>
            <view class="knowledge_base_more">
            </view>
          </view>
          <!--细线  -->
          <view class="line"> </view>
          <view>
            <view class="knowledge_base_content_view">
              <!--讲话内容  -->
              <text class="knowledge_base_content">{{content}} </text>
            </view>
          </view>
        </view>
      </view>
    </scroll-view>
  </swiper-item>
  <!-- 附件查看 -->
  <swiper-item>
    <scroll-view class="music" scroll-y="true">
      <view class="music-container" bindtap="btnFile">
        <!--学习档案  -->
        <view class="music-control">
          <view class="knowledge_base_top">
            <text class="knowledge_base_title">{{titleFile}}</text>
            <view class="knowledge_base_more">
            </view>
          </view>
          <!--细线  -->
          <view class="line"> </view>
          <view>
            <view class="knowledge_base_content_view">
              <!--讲话内容  -->
              <text class="knowledge_base_content">{{contentFile}} </text>
            </view>
          </view>
        </view>
      </view>
    </scroll-view>
  </swiper-item>
  <view class="v-canvas">
    <canvas canvas-id="canvas_wi" style="{{canvas_style}}" class="myCanvas" />
  </view>
  <view class="v-img" bindtap="btnHeart">
    <image src="{{image_heart}}" class="bt-img" bindtap="onClickImage" style="{{style_img}}"></image>
  </view>
    <view class="v-img_leave" bindtap="btnLeaveInfo">
    <image src="../../../image/img_leave_messege.png" class="bt-img_leave" bindtap="onClickImage" style="{{style_img_leave}}"></image>
  </view>
</swiper>