// comment.js
var app = getApp()
var api = require('../../../../api/api.js')
var commentInput
Page({

  /**
   * 页面的初始数据
   */
  data: {

  },
  // 下载评论net
  showCommentNet: function () {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'SHOW_PRAISE_STATE',
      },
      data: {
        feelingId: app.noticeDetailId,
        type: '0'
      },
      success: function (res) {
        console.log("showCommentNet_res", res)
        that.setData({
          comment_list: res.data.FeelingsCommentList
        })
      },
    })
  },
  // 评论net
  CommentNet: function () {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'SAVE_PRAISE',
      },
      data: {
        userId: app.globalData.user.id,
        feelingId: app.noticeDetailId,
        type: '0',
        content: commentInput,
      },
      success: function (res) {
        console.log("CommentNet_res", res)
        if (200 == res.statusCode && 'success' == res.data.result) {
          that.setData({
            inputValue: ''
          })
          commentInput=null
          that.showCommentNet()
        } 
      },
    })
  },
  // 评论输入
  ContentInput: function (e) {
    commentInput = e.detail.value
  },
  // 发送
  btnSend: function () {
    var that = this
    if (null == commentInput || undefined == commentInput || 'undefined' == commentInput){
      wx.showToast({
        title: '评论不能为空',
        image: '../../../../image/error.png',
        duration: 2000
      })
    }else{
      that.CommentNet()
    }
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this
    //更新数据
    that.setData({
      userInfo: app.globalData.userInfo
    })
    that.showCommentNet()
  
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {
  
  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
  
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {
  
  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {
  
  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {
  
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
  
  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {
  
  }
})