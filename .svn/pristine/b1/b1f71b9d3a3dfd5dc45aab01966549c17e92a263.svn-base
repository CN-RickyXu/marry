const host = 'https://party.mtm2000.cn/party/mobile/mobileIn.do'
const wxRequest = (params, url) => {
  wx.showToast({
    title: '加载中',
    icon: 'loading'
  })
  wx.request({
    url: url,
    method: params.method || 'POST',
    data: params.data || {},
    header: {
      'Content-Type': 'application/json',
      '':''
    },
    success: (res) => {
      params.success && params.success(res)
      wx.hideToast()
    },
    fail: (res) => {
      params.fail && params.fail(res)
    },
    complete: (res) => {
      params.complete && params.complete(res)
    }
  })
}


// 注册
const register = (params) => wxRequest(params, host + '?' + "openId=" + params.query.openId +"&name=" + params.query.name
  +"&phone=" + params.query.phone +"&dept=" + params.query.dept +"&idCard=" + params.query.idCard)

module.exports = {
  register
}
