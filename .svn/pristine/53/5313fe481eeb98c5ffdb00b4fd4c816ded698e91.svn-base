.musics-swiper {
  width: 100%;
  height: 100%;
}

.music {
  height: 100%;
  width: 100%;
  background-color: #F5F5F5;
}

.music-cover {
  width: 100%;
}

.music-cover-image {
  width: 100%;
  height: 500rpx;
}

.music-control {
  height: 550rpx;
  margin: 0 35rpx;
  padding: 15rpx 20rpx 8rpx 15rpx;
  position: relative;
  top: -40px;
  background-color: #fff;
  border: 1px solid #ebebeb;
  border-radius: 3px;
  box-shadow: 0px 1px 1px #ebebeb;
}

.music-author {
  margin-bottom: 25px;
  font-weight: 200;
  font-size: 12px;
  text-align: center;
}

.music-author-avatar {
  width: 60px;
  height: 60px;
  margin-right: 15rpx;
  border-radius: 50%;
}

.music-author-username {
  padding: 5px;
  color: #89bdf7;
}

.music-author-desc {
  color: #888;
}

.music-play {
  float: right;
}

.music-play-control {
  width: 40px;
  height: 40px;
  margin-top: 20px;
}

.music-title {
  font-size: 16px;
}

.music-maketime {
  color: #888;
  font-size: 12px;
  text-align: right;
}

.music-content {
  margin: 0 20rpx 25rpx 20rpx;
}

.music-content-header {
  text-align: right;
  border-bottom: 1px solid #eee;
}

.content-label {
  float: left;
  margin-top: 10rpx;
  margin-left: 5rpx;
  font-size: 12px;
}

.content-links {
  display: inline-block;
}

.link {
  width: 35px;
  height: 18px;
}

.music-content-body {
  margin-top: 10px;
}

.story-title {
  font-size: 16px;
  margin-bottom: 10px;
}

.story-author {
  color: #89bdf7;
  font-size: 12px;
  margin-bottom: 10px;
}

.story-content {
  font-size: 14px;
  line-height: 1.5;
}

.lyric-content {
  font-size: 14px;
  line-height: 1.5;
}

.about-content {
  font-size: 14px;
  line-height: 1.5;
}
/*头像下面整个卡片布局样式  */
.party_info {
    width:100%;
    display:flex;
}
/*党费提醒整个布局样式*/
.party_info_left {
    height: 100%;
    width:45%;
    margin-left: 30rpx;
    text-align: left;
}
/*通知公告整个布局样式*/
.party_info_right {
    height: 100%;
    width:45%;
    margin-right: 30rpx;
    text-align: right;
}
/*中间细线 */
.party_info_mid_line {
    height: 120rpx;
    width:3rpx;
    background-color: gray;
}
/*通知公告 */
.party_info_right_text {
   color: #333;
   justify-content:flex-end;
   text-align: right;
}
/*党费提醒 */
.party_info_left_text {
   color: #333;
   justify-content:flex-end;
   text-align: right;
}
/*已交至  8月份 */
.party_info_left_bottom_text {
   margin-top: 20rpx;
   color: #717171;
   font-size: 12px;
   display:flex;
}
.party_info_left_bottom_month_text {
   color: #fe5300;
   width:50%;
   text-align: right;
   font-size: 16px;
   font-weight: bold;
}
/*11条  未读消息 */
.party_info_right_bottom_text {
   width:60%;
   color: #717171;
   font-weight: normal;
   font-size: 12px;
}
.party_info_right_bottom_count_text {
   width:100%;
   padding-left: 50rpx;
   margin-top: 20rpx;
   color: #fe5300;
   text-align: right;
   font-size: 16px;
   font-weight: bold;
   display:flex;
}
/*缴纳党费按钮  */
.pay_party_btn {
  margin-top: 30rpx;
  height: 100rpx;
  background-color: #fe5300;
  border-radius: 26px;
  font-size: 20px;
  color: white;
}
/*党费记录查询 服务指南  */
.query_help {
   margin-top: 30rpx;
   width:100%;
   display:flex;
   text-align: right;
}
/*党费记录查询*/
.record_query {
    height: 100%;
    width:50%;
    margin-left: 30rpx;
    text-align: left;
}

.record_query_content_avatar {
  width: 12px;
  height: 12px;
  margin-right: 15rpx;
}
.record_query_content_text {
   font-size: 15px;
   color: #717171;
}
/*服务指南*/
.servise_guide {
    height: 100%;
    width:50%;
    margin-right: 30rpx;
    text-align: right;
}
