// notice.js
var api = require('../../../api/api.js')
var app = getApp()
var notice_list
var id, name, content
var currentpage = 1
var maxPage
var list = []
Page({

  /**
   * 页面的初始数据
   */
  data: {
    key: '124666'
  },
  // 下载通知公告数据
  NoticeListNet: function () {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'GET_NOTICE_LIST',
      },
      data: {
        // type（0.公告  1.服务指南）
        userId: app.globalData.user.id,
        type: '1',
        currentPage: currentpage
      },
      success: function (res) {
        console.log("notice_res", res)
        if (200 == res.statusCode) {
          list = list.concat(res.data.resultList)
          maxPage = res.data.MaxSize
          console.log("notice_list", list)
          console.log("currentpage", currentpage)
          if (res.data.length >= 1) {
            //更新数据
            that.setData({
              notice_list: list
            })
          } else {
            that.setData({
              notice_list: []
            })
            wx.showToast({
              title: res.data.message,
              image: '../../../image/error.png',
              duration: 2000
            })
          }
        }
      },
    })
  },
 
  // 每条List点击事件
  btnNoticeItem: function (e) {
    var that = this
    id = e.currentTarget.id;
    app.noticeDetailId = id
    console.log("noticeDetailId", id)
    wx.navigateTo({
      url: 'serviceGuideDetail/serviceGuideDetail'
    });
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {

  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    var that = this
    // 清空list
    list.splice(0, list.length);
    that.NoticeListNet()
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {
    var that = this
    // 清空list
    list.splice(0, list.length);
    that.NoticeListNet()
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
    var that = this
    currentpage++
    if (currentpage < maxPage) {
      that.NoticeListNet()
    } else {

    }
    

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})