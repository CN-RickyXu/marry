// comment.js
var app = getApp()
var api = require('../../../api/api.js')
Page({

  /**
   * 页面的初始数据
   */
  data: {
    winWidth: 0,
    winHeight: 0,
    // tab切换  
    currentTab: 0,
  },
  // 下载评论net
  showCommentNet: function () {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'GIVE_ME_PRAISE_OR_COMMENT',
      },
      data: {
        userId: app.globalData.user.id,
        type: '0'
      },
      success: function (res) {
        console.log("my_res", res)
        that.setData({
          comment_list: res.data.FeelingsCommentList
        })
      },
    })
  },
  // 下载赞net
  getPraiseNet: function () {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'GIVE_ME_PRAISE_OR_COMMENT',
      },
      data: {
        userId: '1q2g3h4j312hgj4k32j4ta',
        // userId: app.globalData.user.id,
        type: '1'
      },
      success: function (res) {
        console.log("my_res", res)
        that.setData({
          praise_list: res.data.FeelingsCommentList
        })
      },
    })
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    console.log("onLoad", 'onLoad')
    var that = this
    that.showCommentNet()
    that.getPraiseNet()

  },
  /** 
   * 滑动切换tab 
   */
  bindChange: function (e) {
    var that = this;
    that.setData({ currentTab: e.detail.current });
  },
  /** 
 * 点击tab切换 
 */
  swichNav: function (e) {
    var that = this;
    if (this.data.currentTab === e.target.dataset.current) {
      return false;
    } else {
      that.setData({
        currentTab: e.target.dataset.current
      })
    }
  },
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})