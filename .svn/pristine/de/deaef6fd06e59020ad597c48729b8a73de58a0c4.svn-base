// noticeDetail.js
var api = require('../../../api/api.js')
var app = getApp()
var fileType, fileUrl
var ctx = null;
var isClick = true
var factor = {
  speed: .008,  // 运动速度，值越小越慢
  t: 0    //  贝塞尔函数系数
};
var timer = null;  // 循环定时器



Page({

  /**
   * 页面的初始数据
   */
  data: {
    winWidth: 0,
    winHeight: 0,
    // tab切换  
    currentTab: 0,
    image_heart: '../../../image/img_heart.png',
    titleFile: '无附件',
    contentFile: '请上传相应附件',
  },
  // 下载知识库数据
  RepositoryNet: function () {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'GET_REPOSITORY_DETAIL',
      },
      data: {
        repositoryId: app.noticeDetailId
      },
      success: function (res) {
        console.log("repository_res", res)
        if (200 == res.statusCode && null != res.data.repository) {
          //更新数据
          that.setData({
            title: res.data.repository.title,
            content: res.data.repository.content
          })
        }
        if (200 == res.statusCode && null != res.data.accessory) {
          fileType = res.data.accessory.fileType,
            fileUrl = res.data.accessory.path,
            console.log("fileUrl", fileUrl)
          if (null != res.data.accessory.path && '' != res.data.accessory.path) {
            //更新数据
            that.setData({
              titleFile: res.data.accessory.path,
              contentFile: '附件创建时间:' + res.data.accessory.createTime,
            })
          }
        }
      },
    })
  },
  // 打开文档
  btnFile: function () {
    var that = this
    wx.showLoading({
      title: '正在打开文档...',
    })
    wx.downloadFile({
      url: api.image + fileUrl,
      success: function (res) {
        console.log('res', res)
        var filePath = res.tempFilePath
        console.log('filePath', filePath)
        wx.openDocument({
          filePath: filePath,
          success: function (res) {
            wx.hideLoading()
            wx.showToast({
              title: '打开文档成功',
              image: '../../../image/success.png',
              duration: 2000
            })
          },
          fail: function (res) {
            wx.hideLoading()
            wx.showToast({
              title: '打开文档失败',
              image: '../../../image/error.png',
              duration: 2000
            })
          }
        })
      }
    })
  },
  // 查看点赞状态net
  showPraiseNet: function () {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'SHOW_PRAISE_STATE',
      },
      data: {
        userId: app.globalData.user.id,
        feelingId: app.noticeDetailId,
        type: '3'
      },
      success: function (res) {
        console.log("showPraiseNet_res", res)
        if (200 == res.statusCode && res.data.result) {
          isClick = res.data.result
        } else if (false == res.data.result) {
          isClick = res.data.result
          console.log("isClick", isClick)
          that.redHeart()
        }
      },
    })
  },
  // 点赞net
  PraiseNet: function (isDelete) {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'SAVE_PRAISE',
      },
      data: {
        userId: app.globalData.user.id,
        feelingId: app.noticeDetailId,
        type: '3',
        isDelete: isDelete
      },
      success: function (res) {
        console.log("PraiseNet_res", res)
        console.log("isClick", isClick)
        if (200 == res.statusCode && 'success' == res.data.result) {
          if (isClick) {
            isClick = false
            that.redHeart()
          } else {
            isClick = true
            that.normalHeart()
          }
        } else if ('error' == res.data.result) {
          wx.showToast({
            title: res.data.result,
            image: '../../../image/error.png',
            duration: 2000
          })
        }
      },
    })
  },
  /** 
   * 滑动切换tab 
   */
  bindChange: function (e) {
    var that = this;
    that.setData({ currentTab: e.detail.current });
  },
  /** 
   * 点赞 
   */
  btnHeart: function (e) {
    var that = this;
    ctx = wx.createCanvasContext('canvas_wi')
    console.log("btnHeart", isClick)
    if (isClick) {
      that.PraiseNet('0')
    } else {
      that.PraiseNet('1')
    }

  },
  /** 
   * 点评论
   */
  btnLeaveInfo: function (e) {
    var that = this;
    that.clickLeave()
    setTimeout(function () {
      wx.navigateTo({
        url: 'comment/comment'
      })
    }, 650)

  },
  /**
 * 心变红
 */
  redHeart: function () {
    var that = this
    that.setData({
      style_img: 'transform:scale(1.3);'
    })
    setTimeout(function () {
      that.setData({
        style_img: 'transform:scale(1);'
      })
    }, 500)
    setTimeout(function () {
      that.setData({
        image_heart: '../../../image/heart2.png'
      })
    }, 500)
  },

  /**
* 心变白
*/
  normalHeart: function () {
    var that = this
    that.setData({
      style_img: 'transform:scale(1.3);'
    })
    setTimeout(function () {
      that.setData({
        style_img: 'transform:scale(1);'
      })
    }, 500)
    setTimeout(function () {
      that.setData({
        image_heart: '../../../image/img_heart.png'
      })
    }, 500)
  },
  /**
*评论图标动画
*/
  clickLeave: function () {
    var that = this
    that.setData({
      style_img_leave: 'transform:scale(1.3);'
    })
    setTimeout(function () {
      that.setData({
        style_img_leave: 'transform:scale(1);'
      })

    }, 500)
  },

  /** 
   * 点击tab切换 
   */
  swichNav: function (e) {
    var that = this;
    if (this.data.currentTab === e.target.dataset.current) {
      return false;
    } else {
      that.setData({
        currentTab: e.target.dataset.current
      })
    }
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this
    that.RepositoryNet()
    /** 
     * 获取系统信息 
     */
    wx.getSystemInfo({
      success: function (res) {
        that.setData({
          winWidth: res.windowWidth,
          winHeight: res.windowHeight
        });
      }

    });
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    var that = this
    that.showPraiseNet()

    // 清空值
    fileUrl = null
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  },
})