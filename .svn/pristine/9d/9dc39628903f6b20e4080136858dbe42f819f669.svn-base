
  <scroll-view class="music" scroll-y="true">
    <view class="music-container">
      <view class="music-cover">
      <image class="music-cover-image" src="../../image/my_banner.jpg" mode="aspectFill"></image>
      </view>
         <!-- 头像 -->
        <view class="music-author">
          <image class="music-author-avatar" src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
        </view>
        <view class="party_info">
        <!-- 心得 -->
          <view class="party_info_left">
              <text class="party_info_left_text">29</text>
              <view class="party_info_left_bottom_text">
                 <text>心得</text>
                 <image class="info_img" src="../../image/xinde.png" mode="aspectFill"></image>
              </view>
              
          </view>
                  <!--细线  -->
        <view class="party_info_mid_line"></view>
        <!-- 消息 -->
          <view class="party_info_left">
              <text class="party_info_left_text">32</text>
              <view class="party_info_left_bottom_text">
                 <text>消息</text>
                 <image class="info_img" src="../../image/xiaoxi.png" mode="aspectFill"></image>
              </view>
              
          </view>
                  <!--细线  -->
        <view class="party_info_mid_line"></view>
                  <!-- 赞 -->
          <view class="party_info_left">
              <text class="party_info_left_text">38</text>
              <view class="party_info_left_bottom_text">
                  <text>赞</text>
                   <image class="info_img" src="../../image/zan.png" mode="aspectFill"></image>
              </view>
              
          </view>

        </view>
        <!--按钮栏目  -->
        <view class="btn_area">
        <!--基本信息  -->
          <view class="base_info_view">
            <text class="base_info_text">基本信息</text>
              <view class="base_info_right">
                <image class="base_info_right_img" src="../../image/arrow_chart.png"></image>
              </view>
          </view>
          <!--细线  -->
          <view class="line"> </view>
        <!--微信解绑  -->
          <view class="base_info_view">
            <text class="base_info_text">微信解绑</text>
              <view class="base_info_right">
                <image class="base_info_right_img" src="../../image/arrow_chart.png"></image>
              </view>
          </view>

       <!--细线  -->
          <view class="line"> </view>
        <!--版本信息  -->
          <view class="base_info_view">
            <text class="version_info_text">版本信息</text>
              <view class="base_info_right">
                <image class="base_info_right_img" src="../../image/arrow_chart.png"></image>
              </view>
          </view>
        </view>
    </view>
  </scroll-view>

