.title_gray_info {
  background-color: #E5E9E8;
  padding: 12rpx;
  font-size: 12px;
  color: #333;
}

.view {
  width: 100%;
  height: 100%;
}

.scroll_view {
  height: 94%;
  width: 100%;
  background-color: #f0f4f7;
}

/*评论人信息  */

.comment_user_info {
  display: flex;
}

.comment_user_avater {
  margin: 10rpx;
  height: 70rpx;
  width: 70rpx;
}

.comment_user_name {
  font-size: 11px;
  color: #333;
  padding: 12rpx;
}

.comment_user_date {
  font-size: 10px;
  color: gray;
}

/*评论内容  */

.comment_content {
  margin-left: 80rpx;
  font-size: 12px;
  color: #333;
}

/*细线  */

.line {
  margin-top: 20rpx;
  background-color: #E5E9E8;
  width: 100%;
  text-align: center;
  height: 4rpx;
}

.line_input {
  margin-bottom: 10rpx;
  background-color: #E5E9E8;
  width: 100%;
  text-align: center;
  height: 4rpx;
}

/*底部评论区域  */

.bottom_view {
  width: 100%;
  position: fixed;
  bottom: 0;
}
.view1 {
  display: flex;
}
/*输入框 */

.input_max {
  width: 90%;
  margin-left: 30rpx;
  font-size: 12px;
}
/*发送  */
.send{
  width: 10%;
  margin-top: 12rpx;
  font-size: 12px;
}
