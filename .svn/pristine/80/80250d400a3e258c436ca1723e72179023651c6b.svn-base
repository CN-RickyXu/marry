// partyRecordQuery.js
var api = require('../../../api/api.js')
var app = getApp()
var currentPage = 1
var maxPage
var list = []
Page({

  /**
   * 页面的初始数据
   */
  data: {
    key: ''
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this
    list.splice(0, list.length)
    wx.showLoading({
      title: '正在加载..',
    })
    currentPage = 1
    that.getPayRecordList()
  },
  // 下载订单信息
  getPayRecordList: function () {
    var that = this
    wx.request({
      url: api.mobileIn,
      method: 'GET',
      header: {
        method: 'GET_PAY_RECORD',
      },
      data: {
        userId: app.globalData.user.id,
        currentPage: currentPage
      },
      success: function (res) {
        wx.hideToast()
        console.log("payRecord_res", res)
        if (200 == res.statusCode) {
          currentPage = res.data.currentPage
          var flag = res.data.flag
          maxPage = res.data.maxPage
          if (res.data.length >= 1) {
            console.log("list")
            list = list.concat(res.data.resultList)
            //更新数据
            that.setData({
              list: list
            })
          } else {
            if (flag) {
              wx.showToast({
                title: res.data.message,
                image: '../../../image/success.png',
                duration: 2000
              })
            } else {
              wx.showToast({
                title: res.data.message,
                image: '../../../image/error.png',
                duration: 2000
              })
            }
            that.setData({
              list: []
            })
          }

        }
      },
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
    var that = this
    currentPage++
    if (currentPage < maxPage) {
      that.getPayRecordList()
    }

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})